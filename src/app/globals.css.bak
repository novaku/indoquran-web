/* Custom styles for book-like reading page */
.book-reading-container {
  @apply max-w-4xl mx-auto bg-[#f8f4e5] text-[#5D4037] p-6 md:p-8 border border-[#d3c6a6] rounded-lg shadow-lg;
}

.book-title {
  @apply text-3xl font-bold text-[#3E2723] mb-4;
}

.book-subtitle {
  @apply text-xl font-semibold text-[#5D4037] mb-2;
}

.book-paragraph {
  @apply leading-relaxed mb-4 text-[#5D4037];
}

.book-button {
  @apply px-4 py-2 bg-[#8D6E63] text-white hover:bg-[#6D4C41] rounded-md transition-colors;
}

.book-link {
  @apply text-[#8D6E63] hover:text-[#6D4C41] underline transition-colors;
}

/* Custom appearance for other elements */
.modal-book-theme {
  @apply bg-[#f8f4e5] border border-[#d3c6a6] shadow-xl;
}
