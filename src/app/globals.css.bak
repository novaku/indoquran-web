@import '../styles/book-theme.css';
@tailwind base;
@tailwind components;
@tailwind utilities;

@font-face {
  font-family: 'KFGQPC Uthmanic Script HAFS';
  src: url('/fonts/UthmanicHafs.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Amiri';
  src: url('/fonts/Amiri-Regular.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Amiri';
  src: url('/fonts/Amiri-Bold.ttf') format('truetype');
  font-weight: bold;
  font-style: normal;
}

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 20 14.3% 4.1%;
    --foreground-rgb: 0, 0, 0;
    --background-start-rgb: 214, 219, 220;
    --background-end-rgb: 255, 255, 255;

    /* Book theme variables */
    --book-background-start-rgb: 248, 241, 227;
    --book-background-end-rgb: 245, 236, 217;
    --book-foreground-rgb: 62, 39, 35;
  }
}

@keyframes highlightAyat {
  0% {
    background-color: rgba(251, 191, 36, 0.3);
  }
  70% {
    background-color: rgba(251, 191, 36, 0.3);
  }
  100% {
    background-color: transparent;
  }
}

.highlight-ayat {
  animation: highlightAyat 2s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(5px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fadeIn {
  animation: fadeIn 0.3s ease-in-out;
}

:root {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
}

@media (prefers-color-scheme: dark) {
  :root {
    --background: #0a0a0a;
    --foreground: #ededed;
    --foreground-rgb: 255, 255, 255;
    --background-start-rgb: 0, 0, 0;
    --background-end-rgb: 0, 0, 0;
  }
}

body {
  background: linear-gradient(
    to bottom,
    rgb(var(--background-start-rgb)),
    rgb(var(--background-end-rgb))
  );
  background-attachment: fixed;
  background-size: 100% 100%;
  min-height: 100vh;
  font-feature-settings: "calt" 1;
  background-image: 
    radial-gradient(at 40% 20%, rgba(251, 191, 36, 0.05) 0px, transparent 50%),
    radial-gradient(at 80% 0%, rgba(217, 119, 6, 0.05) 0px, transparent 50%),
    radial-gradient(at 0% 50%, rgba(245, 158, 11, 0.05) 0px, transparent 50%),
    radial-gradient(at 80% 50%, rgba(251, 191, 36, 0.05) 0px, transparent 50%),
    radial-gradient(at 0% 100%, rgba(217, 119, 6, 0.05) 0px, transparent 50%),
    radial-gradient(at 80% 100%, rgba(245, 158, 11, 0.05) 0px, transparent 50%);
  color: rgb(var(--foreground-rgb));
  font-family: Arial, Helvetica, sans-serif;
}

.font-arabic {
  font-family: 'Amiri', serif;
  line-height: 2;
}

.font-arabic-translation {
  font-family: var(--font-amiri);
}

.font-uthmani {
  font-family: 'KFGQPC Uthmanic Script HAFS', 'Amiri', serif;
}

html {
  scroll-behavior: smooth;
}

audio::-webkit-media-controls-panel {
  background-color: #fef3c7;
}

audio::-webkit-media-controls-play-button,
audio::-webkit-media-controls-mute-button {
  background-color: #92400e;
  border-radius: 50%;
}

audio::-webkit-media-controls-timeline {
  background-color: #f59e0b;
  border-radius: 25px;
  margin-left: 10px;
  margin-right: 10px;
}

/* Book theme audio player styling */
.book-theme audio::-webkit-media-controls-panel {
  background-color: #F5ECD9;
}

.book-theme audio::-webkit-media-controls-play-button,
.book-theme audio::-webkit-media-controls-mute-button {
  background-color: #5D4037;
  border-radius: 50%;
}

.book-theme audio::-webkit-media-controls-timeline {
  background-color: #8D6E63;
  border-radius: 25px;
  margin-left: 10px;
  margin-right: 10px;
}

/* Islamic decorative elements */
.islamic-border {
  border-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0,0 L100,0 L100,100 L0,100 L0,0 Z M10,10 L90,10 L90,90 L10,90 L10,10 Z' fill='none' stroke='%23B45309' stroke-width='1'/%3E%3C/svg%3E") 30;
  border-width: 4px;
  border-style: solid;
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
}

